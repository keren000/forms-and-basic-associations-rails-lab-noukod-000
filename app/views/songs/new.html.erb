<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label "Artist" %>
  <%= f.text_field :artist_name %>

  <li id="artists"%>
    <%= Artist.all.each do |artist|%>
      <option value="<%= artist.name%>">
    <%end%>
  </li>
  <br />

  <textarea name="song[artist]"> </textarea>
  <%=f.collection_select :genre_id, Genre.all, :id, :name%>
  <%=f.label "contents"%>
  <input type = "text" name="song[note_contents][]" id="song_notes_1">
  <%= f.label "Song Notes 2"%>
  <input type = "text" name="song[note_contents][]" id="song_notes_2">

  <%= f.submit %>
<% end %>
